  "css": {
    ".dis-area": {
      "display": "none;"
    },
    ".cards": {
      "position": "relative",
      "display": "flex",
      "flex-direction": "row",
      "margin": "0px 10px",
      "padding": "15px"
    },
    ".card": {
      "position": "relative",
      "display": "flex",
      "flex-direction": "column",
      "min-width": "45%",
      "background-color": "#fff",
      "background-clip": "border-box",
      "border": "1px solid rgba(0,0,0,.125)",
      "border-radius": ".25rem",
      "height": "100%",
      "margin": "0px 15px",
      "padding": "20px"
    },
    ".hr": {
      "margin": "10px",
      "background-color": "#abb2b9",
      "opacity": ".50"
    },
    "time:before": {
      "content": "''"
    },
    "#grid-area": {
      "margin": "0 auto",
      "align-items": "center",
      "justify-content": "center",
      "background-color": "#eee",
      "padding": "18px"
    },
    ".letter-box": {
      "padding-top": "0.5rem",
      "border": "2px solid gray",
      "border-radius": "3px",
      "margin": "2px",
      "font-size": "2.5rem",
      "font-weight": "700",
      "height": "2rem",
      "width": "2rem",
      "display": "flex",
      "justify-content": "center",
      "align-items": "center",
      "text-transform": "uppercase"
    },
    ".filled-box": {
      "border": "2px solid black"
    },
    ".letter-row": {
      "display": "flex"
    },
    "#keyboard-cont": {
      "margin": "1rem 0",
      "display": "flex",
      "flex-direction": "column",
      "align-items": "center",
      "justify-content": "center"
    },
    "#keyboard-cont div": {
      "display": "flex"
    },
    ".second-row": {
      "margin": "0.5rem 0"
    },
    ".keyboard-button": {
      "font-size": "1rem",
      "font-weight": "700",
      "padding": "0.5rem",
      "margin": "0 2px",
      "cursor": "pointer",
      "text-transform": "uppercase"
    },
    "#instr": {
      "text-justify": "inter-word",
      "margin": "10px",
      "flex-direction": "row"
    },
    ".collapsible": {
      "background-color": "#eee",
      "color": "#444",
      "font-size": "1rem",
      "cursor": "pointer",
      "padding": "18px",
      "width": "100%",
      "border": "none",
      "text-align": "left",
      "outline": "none"
    },
    ".collapsible-content": {
      "padding": "18px 18px",
      "display": "none",
      "overflow": "hidden",
      "background-color": "#f1f1f1",
      "flex-direction": "row"
    },
    "#instr_title": {
      "max-width": "100%",
      "height": "auto",
      "object-fit": "contain",
      "font-weight": "bold",
      "display": "flex",
      "flex-direction": "row",
      "padding": "18px 18px"
    },
    "#game-board": {
      "display": "flex",
      "align-items": "center",
      "flex-direction": "column"
    },
    "#wrapper": {
      "display": "flex",
      "align-items": "center",
      "justify-content": "center",
      "flex-direction": "column",
      "column-gap": "2rem"
    },
    "#game": {
      "display": "flex",
      "flex-direction": "row"
    }
  },
  "scripts": {
    "incoming-text": "markdown",
    "incoming-image": "display-image",
    "submit-message": "send-intercepted-message",
    "print-history": [
      "attribute-history",
      "markdown-history"
    ],
    "typing-users": "typing-users",
    "plain": ["collapsible-task-instructions","drawing_game"]
  }
}
