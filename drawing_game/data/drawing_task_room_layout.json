  "css": {
    ".card": {
      "position": "relative",
      "display": "flex",
      "flex-direction": "column",
      "min-width": "0",
      "background-color": "#fff",
      "background-clip": "border-box",
      "border": "1px solid rgba(0,0,0,.125)",
      "border-radius": ".25rem",
      "height": "100%",
      "margin": "0px 15px",
      "padding": "20px"
    },
    "time:before": {
      "content": "''"
    },
    "#image-area": {
      "margin": "0 auto"
    },
    ".collapsible": {
      "background-color": "#eee",
      "color": "#444",
      "font-size": "1rem",
      "cursor": "pointer",
      "padding": "18px",
      "width": "100%",
      "border": "none",
      "text-align": "left",
      "outline": "none"
    },
    ".collapsible-content": {
      "padding": "18px 18px",
      "display": "none",
      "overflow": "hidden",
      "background-color": "#f1f1f1"
    }
  },
  "scripts": {
    "incoming-text": "markdown",
    "incoming-image": "display-image",
    "submit-message": "send-intercepted-message",
    "print-history": [
      "attribute-history",
      "markdown-history"
    ],
    "typing-users": "typing-users",
    "plain": ["collapsible-task-instructions","enforce-fullscreen","drawing_game"]
  }
}
